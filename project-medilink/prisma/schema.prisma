generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id                Int        @id @default(autoincrement())
  first_name        String
  last_name         String
  dob               DateTime
  email             String     @unique
  password          String
  height            Float?
  gender            Gender?
  weight            Float?
  bloodType         BloodType?
  createdAt         DateTime   @default(now())
  verificationToken String?
  verified          Boolean    @default(false)
  resetToken        String?
  allergies         String?
}

model Doctor {
  id                Int        @id @default(autoincrement())
  first_name        String
  last_name         String
  gender            Gender?
  dob               DateTime
  email             String     @unique
  password          String
  createdAt         DateTime   @default(now())
  specialty         String?
  verificationToken String?
  verified          Boolean    @default(false)
  resetToken        String?
  allergies         String?
  bloodType         BloodType?
  clinic_location   String?
  height            Float?
  weight            Float?
  phone_number      String     @unique
}

enum Gender {
  MALE
  FEMALE
}

enum BloodType {
  A_POS
  A_NEG
  B_POS
  B_NEG
  AB_POS
  AB_NEG
  O_POS
  O_NEG
}
